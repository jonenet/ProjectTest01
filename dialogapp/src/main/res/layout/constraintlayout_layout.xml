<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:id="@+id/start_local"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/query"
        app:layout_constraintTop_toBottomOf="@+id/start_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#ff0"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_one"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <!--Group可以用来控制一组view的可见性-->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="tv_group_one,tv_group_two,tv_group_three,tv_group_four" />

    <androidx.constraintlayout.helper.widget.Layer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:padding="10dp"
        app:constraint_referenced_ids="tv_group_one,tv_group_two,tv_group_three,tv_group_four"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_group_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#563298"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/guide_one"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_group_two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#5132e8"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/guide_one"
        app:layout_constraintTop_toBottomOf="@id/tv_group_one" />

    <TextView
        android:id="@+id/tv_group_three"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#563235"
        app:layout_constraintStart_toEndOf="@id/tv_group_one"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_group_four"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#587298"
        app:layout_constraintStart_toEndOf="@id/tv_group_one"
        app:layout_constraintTop_toBottomOf="@id/tv_group_three" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="tv_username,tv_password" />


    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#fd5566"
        android:text="aaaaa"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/guide_one"
        app:layout_constraintTop_toBottomOf="@id/tv_group_two" />


    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="UUUUUUUUUUUuuu"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_username"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@id/tv_group_two" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#fd55FF"
        android:text="bbbbbbbbbbbbbbbbbb"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/guide_one"
        app:layout_constraintTop_toBottomOf="@id/tv_username" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="MMMMMMMMM"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_password"
        app:layout_constraintStart_toEndOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@id/et_username" />

    <ImageView
        android:id="@+id/iv_circle_test"
        android:background="#56fc77"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toEndOf="@id/guide_one"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <com.example.dragger.dialogapp.widget.CircularRevealHelper
        android:layout_width="wrap_content"
        app:constraint_referenced_ids="iv_circle_test"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>